
  <%= form_with model: [ @article, @article.comments.build ] do |form| %>
    <p>
      <%= form.label :commenter %><br>
      <%= form.text_field :author %>
    </p>
    <p>
      <%= form.label :body %><br>
      <%= form.text_area :comment %>
    </p>
    
    <p>
      <%= form.submit %>
    </p>
  <% end %>
    